#pragma once
#include <memory>

namespace cpph {
inline namespace stdfwd {
using std::nothrow;

using std::make_shared;
using std::make_unique;

using std::shared_ptr;
using std::tuple;
using std::unique_ptr;
using std::weak_ptr;

template <typename T, typename Deleter = std::default_delete<T>>
using ptr = std::unique_ptr<T, Deleter>;
}  // namespace stdfwd
}  // namespace cpph
